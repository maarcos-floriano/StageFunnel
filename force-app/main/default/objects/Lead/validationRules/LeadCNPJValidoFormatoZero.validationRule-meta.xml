<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LeadCNPJValidoFormatoZero</fullName>
    <active>true</active>
    <errorConditionFormula>AND(	
NOT(ISBLANK(CNPJ__c)),
LEN(CNPJ__c) != 14,
NOT(REGEX(CNPJ__c, &apos;^[0-9]{14}$&apos;)),	
CNPJ__c = &quot;00000000000000&quot;
)</errorConditionFormula>
    <errorMessage>Por favor, insira o CNPJ com exatamente 14 dígitos numéricos e que não seja zero. Ex: 12345678901234.</errorMessage>
</ValidationRule>
